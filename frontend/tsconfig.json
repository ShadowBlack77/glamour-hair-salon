/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "paths": {
      "@lib/core/environments": [
        "./libs/core/environments/src/index.ts"
      ],
      "@lib/core/loadable": [
        "./libs/core/loadable/src/index.ts"
      ],
      "@lib/auth": [
        "./libs/auth/src/index.ts"
      ],
      "@lib/glamour/booking": [
        "./libs/glamour/booking/src/index.ts"
      ],
      "@lib/glamour/cart": [
        "./libs/glamour/cart/src/index.ts"
      ],
      "@lib/glamour/products": [
        "./libs/glamour/products/src/index.ts"
      ],
      "@lib/glamour/payouts": [
        "./libs/glamour/payouts/src/index.ts"
      ],
      "@lib/glamour/profile": [
        "./libs/glamour/profile/src/index.ts"
      ],
      "@lib/shared/header": [
        "./libs/shared/header/src/index.ts"
      ],
      "@lib/shared/footer": [
        "./libs/shared/footer/src/index.ts"
      ],
      "@lib/shared/animations": [
        "./libs/shared/animations/src/index.ts"
      ],
      "@lib/shared/validators": [
        "./libs/shared/validators/src/index.ts"
      ],
      "@lib/shared/http": [
        "./libs/shared/http/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
